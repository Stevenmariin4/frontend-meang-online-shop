{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@shop/*":[
        "src/app/@public/*"
      ],
      "@admin/*":[
        "src/app/@admin/*"
      ],
      "@admin-core/*":[
        "src/app/@admin/core/*"
      ]  ,
      "@shop-core/*":[
        "src/app/@public/core/*"
      ],
      "@Service/*":[
        "src/app/@core/*"
      ],
      "@Shared/*":[
        "src/app/@Shared/*"
      ],
      "@material/*": ["app/material/*"],
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
